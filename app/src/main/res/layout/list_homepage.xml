<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"


    android:padding="3dip"

    android:layout_width="match_parent"

    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/homecategoryimage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:src="@drawable/mobile" />

        <TextView
            android:id="@+id/homecategoryname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/homecategoryimage"
            android:layout_marginLeft="40dp"
            android:paddingTop="20dp"
            android:layout_gravity="right"

            android:textSize="20dp"
            android:textColor="#ffffff"
            android:text="View All"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/homecategoryitemscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:text="New Text"
            android:visibility="gone"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/homecategoryextra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textColor="#f11d05"
            android:visibility="gone"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="extra "
            android:backgroundTint="#a90f5c"
            />
</RelativeLayout>
