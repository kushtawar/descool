<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="horizontal">

    <TableRow
        android:id="@+id/tr1"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginTop="30dp"
        android:orientation = "horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"

        android:gravity="right"
        android:layout_weight="1"
        android:text="Device Type" />

    <Spinner
        android:id="@+id/spinnerDeviceType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/devicetype_arrays"
        android:layout_gravity="right"
        android:layout_weight="2"
        android:paddingLeft="@dimen/paddingleftforspinner"

        android:prompt="@string/deviceselect" />

    </TableRow>

    <TableRow
        android:id="@+id/tr2"
        android:layout_marginTop="20dp"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="right"
        android:layout_weight="1"
        android:text="Location" />

    <Spinner
        android:id="@+id/spinnerDeviceLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingLeft="@dimen/paddingleftforspinner"
        android:layout_weight="2"
        android:entries="@array/devicelocation_arrays"
        android:prompt="@string/devicelocationdefault" />
</TableRow>

    <TableRow
        android:id="@+id/tr3"
        android:layout_marginTop="20dp"

        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="right"
        android:layout_weight="1"
        android:text="Manufacturer" />

    <Spinner
        android:id="@+id/spinnerDeviceManufacturer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:entries="@array/devicemanufacturer_arrays"
        android:paddingLeft="@dimen/paddingleftforspinner"
        android:layout_gravity="right"
        android:prompt="@string/devicemanufacturerdefault" />
</TableRow>

    <TableRow
        android:id="@+id/tr4"
        android:layout_marginTop="10dp"
android:gravity="bottom"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="right"

        android:layout_weight="1"
        android:text="Device No" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDeviceNo"

        android:singleLine="true"
        android:layout_weight="2"
android:minWidth="@dimen/min_textviewwidthintablerow"
        android:layout_gravity="right"
        android:imeOptions="actionNext"



        android:textColorHint="@color/colorHint"

        />

    </TableRow>

    <TableRow
        android:id="@+id/tr5"
        android:layout_marginTop="20dp"
        android:gravity="bottom"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="right"
        android:layout_weight="1"
        android:text="Device Owner" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextOwner"
        android:imeOptions="actionNext"
        android:minWidth="@dimen/min_textviewwidthintablerow"
        android:singleLine="true"
        android:layout_weight="2"
        android:layout_gravity="right"


        android:textColorHint="@color/colorHint"/>

    </TableRow>

    <TableRow
        android:id="@+id/tr6"
        android:layout_marginTop="20dp"
        android:gravity="bottom"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "horizontal"
        android:layout_marginBottom="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="right"

        android:layout_weight="1"
        android:text="Device Model" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:minWidth="@dimen/min_textviewwidthintablerow"
        android:singleLine="true"
        android:layout_weight="2"
        android:layout_gravity="right"
        android:imeOptions="actionDone"

        android:textColorHint="@color/colorHint"
        android:id="@+id/editTextDeviceModel"

        />

    </TableRow>
</TableLayout>