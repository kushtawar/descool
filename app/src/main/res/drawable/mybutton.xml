<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >

            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#6289a4"  />
            <gradient android:angle="-90" android:startColor="#062f5e" android:endColor="#030215"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#030215" />
            <solid android:color="#030215"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#030215" />
            <gradient android:angle="-90" android:startColor="#062f5e" android:endColor="#030215" />
        </shape>
    </item>
</selector>

